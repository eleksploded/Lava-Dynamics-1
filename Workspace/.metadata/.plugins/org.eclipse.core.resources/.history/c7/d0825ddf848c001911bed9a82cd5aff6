package com.eleksploded.lavadynamics;

import com.eleksploded.lavadynamics.proxy.CommonProxy;

import net.minecraftforge.common.config.Configuration;

public class Config {
	private static final String CATEGORY_VOLCANO = "Volcano Settings";

    public static int volcanoChance = 20;
    public static int volcanoYLevel = 10;
    
    public static void readConfig() {
        Configuration cfg = CommonProxy.config;
        try {
            cfg.load();
            initGeneralConfig(cfg);
        } catch (Exception e1) {
            System.out.println("Problem loading config file! "+ e1);
        } finally {
            if (cfg.hasChanged()) {
                cfg.save();
            }
        }
    }

    private static void initGeneralConfig(Configuration cfg) {    	
    	volcanoChance = cfg.getInt("volcanoChance", CATEGORY_VOLCANO, volcanoChance, 0, 100, "Precent chance of volcano to spawn (1~100)");
    	volcanoYLevel = cfg.getInt("volcanoYLevel", CATEGORY_VOLCANO, volcanoYLevel, 3, 255, "Approximate Y level of underground volcano lake");
    }
}
